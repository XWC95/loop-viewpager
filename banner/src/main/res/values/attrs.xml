<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="banner">
        <attr name="delay_time" format="integer" />
        <attr name="auto_play" format="boolean" />
        <attr name="image_scale_type" format="integer"/>
        <attr name="follow" format="boolean"/>
        <attr name="gravity">
            <enum name="left" value="1"/>
            <enum name="center" value="0"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="indicator_margin" format="dimension" />
        <attr name="circle_color" format="color"/>
        <attr name="indicator_color" format="color"/>
    </declare-styleable>

</resources>